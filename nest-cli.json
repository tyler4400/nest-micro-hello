{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-app1/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nest-app1/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nest-app1",
  "projects": {
    "client": {
      "type": "application",
      "root": "apps/client",
      "entryFile": "main",
      "sourceRoot": "apps/client/src",
      "compilerOptions": {
        "tsConfigPath": "apps/client/tsconfig.app.json"
      }
    },
    "nest-app1": {
      "type": "application",
      "root": "apps/nest-app1",
      "entryFile": "main",
      "sourceRoot": "apps/nest-app1/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-app1/tsconfig.app.json"
      }
    }
  }
}